    <changeSet id="1.0.4" author="serg.perm">
        <createTable tableName="user_usertypes">

            <column name="user_id" type="BIGINT">
            </column>

            <column name="usertype_id" type="BIGINT">
            </column>

        </createTable>
    </changeSet>

    <changeSet id="1.0.5" author="serg.perm">
        <createTable tableName="transportations">

            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>

            <column name="name" type="VARCHAR(100)" >
                <constraints nullable="false" unique="true"/>
            </column>

            <column name="user_id" type="BIGINT" defaultValue="1">
                <constraints nullable="false"/>
            </column>

            <column name="transport_type_id" type="BIGINT" defaultValue="1">
                <constraints nullable="false"/>
            </column>

            <column name="status" type="VARCHAR(25)" defaultValue="ACTIVE">
                <constraints nullable="false"/>
            </column>

            <column name="updated" type="TIMESTAMP" defaultValue="CURRENT_TIMESTAMP()">
                <constraints nullable="false"/>
            </column>

            <column name="created" type="TIMESTAMP" defaultValue="CURRENT_TIMESTAMP()">
                <constraints nullable="false"/>
            </column>

        </createTable>
    </changeSet>

    <changeSet id="1.0.6" author="serg.perm">
        <createTable tableName="transport_types">

            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>

            <column name="name" type="VARCHAR(100)">
                <constraints nullable="false" unique="true"/>
            </column>

            <column name="description" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>

            <column name="lenght" type="DOUBLE PRECISION">
                <constraints nullable="false"/>
            </column>

            <column name="width" type="DOUBLE PRECISION">
                <constraints nullable="false"/>
            </column>

            <column name="height" type="DOUBLE PRECISION">
                <constraints nullable="false"/>
            </column>

            <column name="volume" type="DOUBLE PRECISION">
                <constraints nullable="false"/>
            </column>

            <column name="carrying" type="DOUBLE PRECISION">
                <constraints nullable="false"/>
            </column>

            <column name="updated" type="TIMESTAMP" defaultValue="CURRENT_TIMESTAMP()">
                <constraints nullable="false"/>
            </column>

            <column name="created" type="TIMESTAMP" defaultValue="CURRENT_TIMESTAMP()">
                <constraints nullable="false"/>
            </column>

        </createTable>
    </changeSet>

    <changeSet id="1.0.7" author="serg.perm">
